# ========================================
# Moltbot 返佣管家 - 环境配置
# ========================================

# Telegram Bot 配置
# 通过 @BotFather 创建 Bot 获取
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OKX Broker API 配置 (50% 返佣)
# 从 OKX 代理商后台获取
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase
OKX_BROKER_ID=your_broker_id

# Gate.io Broker API 配置 (85% 返佣)
# 从 Gate.io 代理商后台获取
GATE_API_KEY=your_gate_api_key
GATE_SECRET_KEY=your_gate_secret_key

# 数据库配置
DATABASE_PATH=./data/rebate.db

# 返佣比例设置
OKX_REBATE_RATE=0.50
GATE_REBATE_RATE=0.85

# 推广链接
OKX_REFERRAL_LINK=https://www.okx.com/join/YOUR_CODE
GATE_REFERRAL_LINK=https://www.gate.io/signup/YOUR_CODE

# 管理员 Telegram ID (用于接收系统通知)
ADMIN_TELEGRAM_ID=your_telegram_user_id
